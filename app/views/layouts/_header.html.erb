      <div class="hidden md:flex items-center space-x-3 flex-shrink-0">
        <!-- LinkedIn -->
        <%= link_to "https://www.linkedin.com/in/patrickemuller/", target: "_blank", rel: "noopener noreferrer", class: "text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200", title: "LinkedIn Profile" do %>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
