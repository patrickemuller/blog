<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Site Name/Logo -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "text-2xl font-bold text-gray-900 hover:text-gray-700 transition-colors duration-200" do %>
          Patrick's Blog
        <% end %>
      </div>

      <!-- Search Field -->
      <div class="flex-shrink-0 w-64">
        <div class="relative">
          <%= form_with url: search_posts_path, method: :get, local: true, class: "w-full" do |form| %>
            <%= form.text_field :search,
                                placeholder: "Search posts...",
                                class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200" %>
            <div class="absolute inset-y-0 right-0 flex items-center pr-3">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>