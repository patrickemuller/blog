        <!-- Theme Toggle -->
        <span class="cursor-pointer" data-controller="dark-theme" data-action="click->dark-theme#toggle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" />
          </svg>
        </span>

        <% if user_signed_in? %>
          <%= link_to "Sign Out", destroy_user_session_path, class: "text-sm rounded-md px-3 py-1.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_method: :delete, turbo_confirm: "Are you sure you wanna logout?" } %>
        <% end %>
      </div>

      <!-- Mobile menu button - Visible on mobile -->
      <div class="md:hidden flex items-center">
        <button type="button" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 focus:outline-none" data-action="click->mobile-menu#toggle">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu - Hidden by default -->
    <div class="hidden md:hidden pb-4" data-mobile-menu-target="menu">
      <!-- Mobile Search -->
      <div class="pt-2 pb-3">
        <%= form_with url: root_path, method: :get, local: true, class: "w-full" do |form| %>
          <%= form.text_field :term,
                              placeholder: "Search posts...",
                              class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200" %>
        <% end %>
      </div>

      <!-- Mobile Social Links -->
      <div class="flex items-center space-x-4 py-3 border-t border-gray-200 dark:border-gray-700">
        <%= link_to "https://www.linkedin.com/in/patrickemuller/", target: "_blank", rel: "noopener noreferrer", class: "flex items-center space-x-2 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200" do %>
