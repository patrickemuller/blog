<%= form_with(model: post, class: "contents mt-10") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 dark:bg-red-900/30 dark:text-red-300 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul class="list-disc ml-6">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100", {"border-gray-400 dark:border-gray-700 focus:outline-blue-600": post.errors[:title].none?, "border-red-400 dark:border-red-600 focus:outline-red-600": post.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= form.textarea :body, rows: 36, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100", {"border-gray-400 dark:border-gray-700 focus:outline-blue-600": post.errors[:body].none?, "border-red-400 dark:border-red-600 focus:outline-red-600": post.errors[:body].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
