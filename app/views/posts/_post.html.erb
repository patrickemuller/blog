<article id="<%= dom_id post %>" class="mx-auto w-full py-8">
  <header class="mb-8">
    <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-gray-900 dark:text-gray-100"><%= post.title %></h1>
    <p class="mt-3 text-sm text-gray-500 dark:text-gray-400">
      <time datetime="<%= post.created_at.iso8601 %>"><%= post.created_at.strftime("%B %-d, %Y") %></time>
    </p>
  </header>

  <div class="post-content text-lg leading-8 text-gray-800 dark:text-gray-200 space-y-6">
    <%= post.formatted_body %>
  </div>
</article>
