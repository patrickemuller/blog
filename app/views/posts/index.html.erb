<% content_for :title, "Blog" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-700 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="mx-auto w-full px-4 sm:px-6 lg:px-8">
    <header class="flex items-center justify-between py-8">
      <h1 class="text-3xl sm:text-4xl font-extrabold tracking-tight text-gray-900">Latest Posts</h1>
      <% if user_signed_in? %>
        <%= link_to "New post", new_post_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-semibold shadow-sm" %>
      <% end %>
    </header>

    <div id="posts" class="divide-y divide-gray-200">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <article class="py-8">
            <header class="mb-3">
              <h2 class="text-2xl font-bold text-gray-900">
                <%= link_to post.title, post, class: "hover:text-blue-600 transition-colors" %>
              </h2>
              <p class="mt-1 text-sm text-gray-500">
                <time datetime="<%= post.created_at.iso8601 %>"><%= post.created_at.strftime("%B %-d, %Y") %></time>
              </p>
            </header>

            <p class="mt-4 text-gray-700 leading-7">
              <%= truncate(strip_tags(post.formatted_body), length: 220, separator: ' ') %>
            </p>

            <div class="mt-6 flex items-center justify-between">
              <%= link_to "Read more â†’", post, class: "text-blue-600 hover:text-blue-500 font-semibold" %>
              <% if user_signed_in? %>
                <div class="flex items-center gap-2">
                  <%= link_to "Show", post, class: "text-sm rounded-md px-3 py-1.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
                  <%= link_to "Edit", edit_post_path(post), class: "text-sm rounded-md px-3 py-1.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
                  <%= button_to "Destroy", post, method: :delete, class: "text-sm rounded-md px-3 py-1.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
                </div>
              <% end %>
            </div>
          </article>
        <% end %>
      <% else %>
        <p class="text-center my-16 text-gray-500">No posts found.</p>
      <% end %>
    </div>
  </div>
</div>
