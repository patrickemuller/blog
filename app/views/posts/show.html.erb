<% content_for :title, "Patrick's Blog | #{@post.title}" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-700 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="">
    <%= render @post %>
  </div>

  <% if user_signed_in? %>
    <div class="mx-auto w-full px-4 sm:px-6 lg:px-8 pb-12">
      <div class="flex flex-wrap gap-2">
        <%= link_to "Edit this post", edit_post_path(@post), class: "text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        <%= link_to "Back to posts", posts_path, class: "text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        <%= button_to "Destroy this post", @post, method: :delete, form_class: "inline-block", class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>
